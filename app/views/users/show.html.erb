<p id="notice"><%= notice %></p>

<p>
	<%= image_tag @user.avatar.url(:thumb) %>
</p>
<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
	<strong>Roles:</strong>
	<%= @user.roles.map { |r| r.name }.join(",") %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
